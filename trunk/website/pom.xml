<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.objenesis</groupId>
    <artifactId>objenesis</artifactId>
    <version>0.1-SNAPSHOT</version>
  </parent>
  <artifactId>objenesis-website</artifactId>
  <name>Objenesis website</name>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <configuration>
          <tasks>
            <mkdir dir="${project.build.directory}/content"/>
            <copy todir="${project.build.directory}/content" filtering="true" overwrite="true">
              <fileset dir="${basedir}/content"/>
                <filterset>
                 <filter token="VERSION" value="${project.version}"/>
                </filterset>
            </copy>
          </tasks>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.xsite</groupId>
        <artifactId>xsite-maven-plugin</artifactId>
        <configuration>
          <siteMapPath>${project.build.directory}/content/sitemap.xml</siteMapPath>
          <skinPath>${basedir}/skin/skin.html</skinPath>
          <outputDirectoryPath>${project.build.directory}/xsite</outputDirectoryPath>
        </configuration>
      </plugin>      
    </plugins>
  </build>

</project>
