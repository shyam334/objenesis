<!--
To run JVM tests, modify the path values below for each JVM installed
on your system and copy the contents to ~/.m2/settings.xml ("%USERPROFILE%\.m2\settings.xml" on Windows)

To be able to deploy on Sonatype, add the servers below
-->

<settings>
  <profiles>
    <profile>
      <id>test</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <sun_jdk1_3.jvm>c:\jdk1.3.1_19\bin\java.exe</sun_jdk1_3.jvm>
        <sun_jdk1_4.jvm>c:\j2sdk1.4.2_12\bin\java.exe</sun_jdk1_4.jvm>
        <sun_jdk1_5.jvm>c:\Program Files\Java\jre1.5.0_10\bin\java.exe</sun_jdk1_5.jvm>
        <sun_jdk1_6.jvm>c:\Program Files\Java\jre1.6.0_13\bin\java.exe</sun_jdk1_6.jvm>
        <sun_jdk1_7.jvm>c:\Program Files\Java\jre1.7.0_11\bin\java.exe</sun_jdk1_7.jvm>
        <jrockit1_3.jvm>c:\Program Files\JRockit\7.0SP6\1.3.1\bin\java.exe</jrockit1_3.jvm>
        <jrockit1_4.jvm>c:\jrockit-j2sdk1.4.2_08\bin\java.exe</jrockit1_4.jvm>
        <jrockit1_5.jvm>c:\jrrt-3.1.0-1.5.0\bin\java.exe</jrockit1_5.jvm>
        <jrockit1_6.jvm>c:\jrrt-3.1.0-1.6.0\bin\java.exe</jrockit1_6.jvm>
      </properties>
    </profile>
  </profiles>
  
  <servers>
    <server>
      <id>sonatype-nexus-snapshots</id>
      <username>myusername</username>
      <password>mypassword</password>      
    </server>
    <server>
      <id>sonatype-nexus-staging</id>
      <username>myusername</username>
      <password>mypassword</password>      
    </server>  
  </servers>  
</settings>
